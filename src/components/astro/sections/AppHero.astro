---
/** biome-ignore-all lint/correctness/noUnusedImports: React icons are used in JSX */
/** biome-ignore-all lint/correctness/noUnusedVariables: variables used in Astro components */

import type { AppHeroProps } from "@/types/app";
import { FaApple } from "react-icons/fa";

interface Props extends AppHeroProps {}

const { title, description, tags = [], storeLinks, logo } = Astro.props;

---

<div class="mb-16 flex flex-col items-center md:items-start md:flex-row gap-8">
	<div class="flex-shrink-0 md:self-center">
		<div>
			<img src={logo} />
		</div>
	</div>

	<div class="flex flex-1 flex-col justify-between text-center md:text-left">
		<div>
			<h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-3">{title}</h1>
			<p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed mb-6 max-w-2xl mx-auto md:mx-0">{description}</p>
			<ul class="mb-6 flex flex-wrap gap-2 justify-center md:justify-start text-sm text-gray-600 dark:text-gray-400">
				{
					tags.map((tag)=>(
						<li class="rounded-full bg-gray-100 dark:bg-white/[0.06] px-3 py-1">{tag}</li>
					))
				}
			</ul>
		</div>

		<div class="flex gap-3 justify-center md:justify-start">
			<a
				href={storeLinks.apple}
				target="_blank"
				rel="noopener noreferrer"
				class="group flex items-center gap-2 rounded-xl border border-gray-300 dark:border-white/10 bg-white dark:bg-white/[0.04] px-4 py-3 hover:bg-gray-50 dark:hover:bg-white/[0.08] hover:border-gray-400 dark:hover:border-white/20 shadow-sm flex-1 min-w-0 md:flex-initial"
			>
				<div class="flex items-center justify-center w-6 h-6 flex-shrink-0">
					<FaApple className="text-gray-600 dark:text-gray-300 group-hover:scale-110 group-hover:text-gray-800 dark:group-hover:text-white w-5 h-5" />
				</div>
				<span class="text-left min-w-0">
					<div class="text-[10px] font-medium text-gray-500 dark:text-gray-400 group-hover:text-gray-600 dark:group-hover:text-gray-300">Direct Download</div>
					<div class="text-xs font-semibold tracking-wide text-gray-900 dark:text-white/90 group-hover:text-gray-900 dark:group-hover:text-white">MeTube.IPA</div>
				</span>
			</a>
		</div>
	</div>
</div>
