---
/** biome-ignore-all lint/correctness/noUnusedImports: React icons are used in JSX */
/** biome-ignore-all lint/correctness/noUnusedVariables: variables used in Astro components */

import AppHero from "@astro/sections/AppHero.astro";
import FAQ from "@astro/sections/FAQ.astro";
import Features from "@astro/sections/Features.astro";
import { faqs } from "@config/faqs";
import { features } from "@config/features";
import { screenshots } from "@config/screenshots";
import { siteConfig } from "@config/site";
import Layout from "@layouts/Layout.astro";
import Comments from "@react/interactive/Comments";
import Lightbox from "@react/interactive/Lightbox";
import Screenshots from "@react/interactive/Screenshots";

const { name: title, description, storeLinks, logo, tags } = siteConfig;
const CUSDIS_APP_ID = "51edece4-6387-457f-bd65-69817fdffa3e"; // Get one from https://cusdis.com
---

<Layout title={title} description={description}>
  <main class="min-h-screen max-w-5xl mx-auto px-4 py-8">
    <AppHero title={title} description={description} storeLinks={storeLinks} logo={logo} tags={tags} />
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">App Information</h2>
      <div>
        应用信息
      </div>
    </section>
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Install App</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li><a href="/altstore_install" class="text-blue-600 hover:underline">AltStore 安装</a></li>
        <li><a href="/sideloadly_install" class="text-blue-600 hover:underline">SideLoadly</a></li>
        <li><a href="/livecontainer_install" class="text-blue-600 hover:underline">LiveContainer</a></li>
        <li><a href="/plumeimpactor_install" class="text-blue-600 hover:underline">PlumeImpactor</a></li>
      </ul>
    </section>
    <div class="mb-16"><Screenshots images={screenshots} client:load /></div>
    <Features items={features} />
    <!-- <Reviews items={reviews} client:visible /> -->
    <FAQ items={faqs} />
    <Comments client:visible />
  </main>
</Layout>

<Lightbox images={screenshots} client:load />

<style is:global>
  .screenshots-scroll {
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    &::-webkit-scrollbar { display: none; }
  }
</style>
