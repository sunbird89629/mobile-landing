---
/** biome-ignore-all lint/correctness/noUnusedImports: React icons are used in JSX */
/** biome-ignore-all lint/correctness/noUnusedVariables: variables used in Astro components */

import AppHero from "@astro/sections/AppHero.astro";
import FAQ from "@astro/sections/FAQ.astro";
import Features from "@astro/sections/Features.astro";
import { faqs } from "@config/faqs";
import { features } from "@config/features";
import { screenshots } from "@config/screenshots";
import { siteConfig } from "@config/site";
import Layout from "@layouts/Layout.astro";
import Comments from "@react/interactive/Comments";
import Lightbox from "@react/interactive/Lightbox";
import Screenshots from "@react/interactive/Screenshots";
import { getImage } from "astro:assets";

const { name: title, description, storeLinks, logo, tags } = siteConfig;
const CUSDIS_APP_ID = "51edece4-6387-457f-bd65-69817fdffa3e"; // Get one from https://cusdis.com

// Optimize images
const optimizeImages = async (images: typeof screenshots) => {
  const optimizedIphone = await Promise.all(
    images.iphone.map(async (img) => {
      if (typeof img === "string") return img;
      const optimized = await getImage({ src: img, format: "webp", quality: 80 });
      return optimized.src;
    })
  );

  const optimizedIpad = await Promise.all(
    images.ipad.map(async (img) => {
      if (typeof img === "string") return img;
      const optimized = await getImage({ src: img, format: "webp", quality: 80 });
      return optimized.src;
    })
  );

  return {
    iphone: optimizedIphone,
    ipad: optimizedIpad,
  };
};

const optimizedScreenshots = await optimizeImages(screenshots);
